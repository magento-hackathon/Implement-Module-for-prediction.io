<?xml version="1.0"?>
<config>
    <modules>
        <Magehack_Predictions>
            <version>0.0.1</version>
        </Magehack_Predictions>
    </modules>
    <global>
        <helpers>
            <predictions>
                <class>Magehack_Predictions_Helper</class>
            </predictions>
        </helpers>
        <blocks>
            <predictions>
                <class>Magehack_Predictions_Block</class>
            </predictions>
            <catalog>
                <rewrite>
                    <product_list_related>Magehack_Predictions_Block_Catalog_Product_List_Related</product_list_related>
                </rewrite>
            </catalog>
        </blocks>
    </global>
    <frontend>
        <events>
            <catalog_controller_product_view>
                <observers>
                    <predictions>
                        <class>predictions/observer</class>
                        <method>addToCart</method>
                    </predictions>
                </observers>
            </catalog_controller_product_view>
            <checkout_cart_add_product_complete>
                <observers>
                    <predictions>
                        <class>predictions/observer</class>
                        <method>addToCart</method>
                    </predictions>
                </observers>
            </checkout_cart_add_product_complete>
            <sales_order_place_after>
                <observers>
                    <predictions>
                        <class>predictions/observer</class>
                        <method>createOrder</method>
                    </predictions>
                </observers>
            </sales_order_place_after>
        </events>
    </frontend>
    <default>
        <predictions>
            <predictionio>
                <enabled>0</enabled>
                <apikey></apikey>
                <baseuri></baseuri>
                <algorithm></algorithm>
            </predictionio>
        </predictions>
    </default>
</config>

