<?xml version="1.0"?>
<config>
    <modules>
        <Magehack_Predictions>
            <version>0.0.1</version>
        </Magehack_Predictions>
    </modules>
    <global>
        <models>
            <predictions>
                <class>Magehack_Predictions_Model</class>
                <resourceModel>predictions_resource</resourceModel>
            </predictions>
            <predictions_resource>
                <class>Magehack_Predictions_Model_Resource</class>
                <entities>
                    <queue>
                        <table>predictions_queue</table>
                    </queue>
                </entities>
            </predictions_resource>
        </models>
        <resources>
            <predictions_setup>
                <setup>
                    <module>Magehack_Predictions</module>
                </setup>
            </predictions_setup>
        </resources>
        <helpers>
            <predictions>
                <class>Magehack_Predictions_Helper</class>
            </predictions>
        </helpers>
        <blocks>
            <predictions>
                <class>Magehack_Predictions_Block</class>
            </predictions>
            <catalog>
                <rewrite>
                    <product_list_related>Magehack_Predictions_Block_Catalog_Product_List_Related</product_list_related>
                </rewrite>
            </catalog>
        </blocks>
    </global>
    <frontend>
        <events>
            <catalog_controller_product_view>
                <observers>
                    <predictions>
                        <class>predictions/observer</class>
                        <method>viewProduct</method>
                    </predictions>
                </observers>
            </catalog_controller_product_view>
            <checkout_cart_add_product_complete>
                <observers>
                    <predictions>
                        <class>predictions/observer</class>
                        <method>addToCart</method>
                    </predictions>
                </observers>
            </checkout_cart_add_product_complete>
            <sales_order_place_after>
                <observers>
                    <predictions>
                        <class>predictions/observer</class>
                        <method>createOrder</method>
                    </predictions>
                </observers>
            </sales_order_place_after>
            <http_response_send_before>
                <observers>
                    <predictions>
                        <class>predictions/observer</class>
                        <method>createUniqueId</method>
                    </predictions>
                </observers>
            </http_response_send_before>
            <customer_login>
                <observers>
                    <catalog>
                        <type>model</type>
                        <class>predictions/observer</class>
                        <method>mergeCustomerLogin</method>
                    </catalog>
                </observers>
            </customer_login>
        </events>
    </frontend>
    <default>
        <predictions>
            <general>
                <enabled>0</enabled>
                <related_products>1</related_products>
                <engine>0</engine>
            </general>
            <predictionio>
                <api_key></api_key>
                <base_uri></base_uri>
            </predictionio>
            <myrrix>
                <username></username>
                <password></password>
                <base_uri></base_uri>
                <view_points>1</view_points>
                <addtocart_points>15</addtocart_points>
                <addtowishlist_points>10</addtowishlist_points>
                <order_points>100</order_points>
            </myrrix>
        </predictions>
    </default>
    <crontab>
        <jobs>
            <predictions_queue_process>
                <schedule>
                    <cron_expr>*/15 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>predictions/queue::process</model>
                </run>
            </predictions_queue_process>
        </jobs>
    </crontab>
</config>

